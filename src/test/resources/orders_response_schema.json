{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["order_id", "status", "customer", "items", "financials"],
  "properties": {
    "order_id": { "type": "string", "pattern": "^ORD-[0-9]+$" },
    "status": { "type": "string", "enum": ["PLACED", "PARTIALLY_SHIPPED", "SHIPPED", "DELIVERED"] },
    "customer": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tier": { "type": "string" },
        "preferences": {
          "type": "object",
          "properties": {
            "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
            "notifications": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["sku", "type", "pricing"],
        "properties": {
          "sku": { "type": "string" },
          "type": { "type": "string" },
          "details": { "type": "object" },
          "pricing": {
            "type": "object",
            "properties": {
              "unit_price": { "type": "number" },
              "quantity": { "type": "integer" },
              "discount": { "type": "number" }
            }
          }
        }
      }
    },
    "financials": {
      "type": "object",
      "properties": {
        "subtotal": { "type": "number" },
        "total_payable": { "type": "number" },
        "tax_breakdown": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "state": { "type": "string", "minLength": 2, "maxLength": 2 },
              "rate": { "type": "number" },
              "amount": { "type": "number" }
            }
          }
        }
      }
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "event": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}